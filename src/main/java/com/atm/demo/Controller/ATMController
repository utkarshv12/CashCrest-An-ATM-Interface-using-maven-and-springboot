package com.atm.demo.controller;

import com.atm.demo.model.BankAccount;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

@RestController
@RequestMapping("/api/atm")
public class ATMController {

    @Autowired
    private BankAccount account;

    @GetMapping("/balance")
    public String checkBalance() {
        return "ðŸ’³ Current Balance: " + account.getBalance();
    }

    @PostMapping("/withdraw")
    public String withdraw(@RequestParam float amount) {
        return account.withdraw(amount);
    }

    @PostMapping("/deposit")
    public String deposit(@RequestParam float amount) {
        return account.deposit(amount);
    }

    @PostMapping("/transfer")
    public String transfer(@RequestParam String recipient, @RequestParam float amount) {
        return account.transfer(recipient, amount);
    }
}
